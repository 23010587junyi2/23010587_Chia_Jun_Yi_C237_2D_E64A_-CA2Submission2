    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        /* Basic styling for demonstration purposes */
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .cart {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
        }
        .cart-item {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Shopping Cart</h1>

    <div class="cart">
        <h2>Your Cart</h2>
        <div id="cart-items">
            <!-- Cart items will be dynamically added here -->
        </div>
        <p>Total: $<span id="cart-total">0.00</span></p>
        <button onclick="checkout()">Checkout</button>
    </div>

    <h2>Products</h2>
    <div id="products">
        <div class="product">
            <h3>ticket 1</h3>
            <p>Price: $10.00</p>
            <button onclick="addToCart('Product 1', 10.00)">Add to Cart</button>
        </div>
        <div class="product">
            <h3>ticket 2</h3>
            <p>Price: $25.00</p>
            <button onclick="addToCart('Product 2', 15.00)">Add to Cart</button>
        </div>
        <!-- Add more products as needed -->
    </div>

    <script>
        // Shopping Cart functionality
        var cartItems = [];

        function addToCart(itemName, price) {
            var item = {
                name: itemName,
                price: price
            };
            cartItems.push(item);
            renderCart();
        }

        function renderCart() {
            var cartItemsDiv = document.getElementById('cart-items');
            var cartTotalSpan = document.getElementById('cart-total');
            cartItemsDiv.innerHTML = '';
            var total = 0;
            cartItems.forEach(function(item) {
                var itemDiv = document.createElement('div');
                itemDiv.classList.add('cart-item');
                itemDiv.innerHTML = '<p>' + item.name + ' - $' + item.price.toFixed(2) + '</p>';
                cartItemsDiv.appendChild(itemDiv);
                total += item.price;
            });
            cartTotalSpan.textContent = total.toFixed(2);
        }

        function checkout() {
            // Here you can implement logic to proceed to checkout or submit the cart data
            alert('Checkout not implemented in this demo.');
        }
    </script>
</body>
